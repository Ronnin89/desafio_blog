<h1>todos los posts</h1>

<% @posts.each_slice(3) do |three_post| %>

    <div class="card-deck my-5">
        <div class="row w-100">
            <% three_post.each do |post| %>
                <div class="col-md-4">
                    <div class="card">
                        <img src="<%= post.image_url %>" class="card-img-top" alt=" foto del <%= post.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= post.title %></h5>
                            <p class="card-text"><%= post.content %></p>
                            <p class="card-text"><small class="text-muted"><%= time_ago_in_words(post.created_at) %></small></p>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
<% end %>